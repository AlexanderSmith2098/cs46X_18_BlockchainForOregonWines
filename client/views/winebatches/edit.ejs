<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Wine Batch</h1>
    <div class="col-6 offset-3">
        <form action="/winebatches/<%=winebatch.wID%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="batch_name">Batch Name</label>
                <input class="form-control" type="text" id="batch_name" name="winebatch[batch_name]" value="<%= winebatch.batch_name %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="wine_name">Wine Name</label>
                <input class="form-control" type="text" id="wine_name" name="winebatch[wine_name]" value="<%= winebatch.wine_name %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" fnumBottles">Number of Bottles</label>
                <div class="input-group">
                    <span class="input-group-text" id="num_bottles-label">#</span>
                    <input type="text" class="form-control" id="num_bottles" placeholder="0" aria-label="num_bottles"
                        aria-describedby="num_bottles-label" name="winebatch[num_bottles]" value="<%= winebatch.num_bottles %>" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="style">Style</label>
                <input class="form-control" type="text" id="style" name="winebatch[style]" value="<%= winebatch.style %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="alcohol">Alcohol</label>
                <input class="form-control" type="text" id="alcohol" name="winebatch[alcohol]" value="<%= winebatch.alcohol %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="ava">American Viticulture Area</label>
                <input class="form-control" type="text" id="ava" name="winebatch[ava]" value="<%= winebatch.ava %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="acidity">Acidity</label>
                <input class="form-control" type="text" id="acidity" name="winebatch[acidity]" value="<%= winebatch.acidity %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="grape_variety">Grape Variety</label>
                <input class="form-control" type="text" id="grape_variety" name="winebatch[grape_variety]" value="<%= winebatch.grape_variety %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="harvest_loc">Harvest Location</label>
                <input class="form-control" type="text" id="harvest_loc" name="winebatch[harvest_loc]" value="<%= winebatch.harvest_loc %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="harvest_date">Harvest Date</label>
                <input class="form-control" type="text" id="harvest_date" name="winebatch[harvest_date]" value="<%= winebatch.harvest_date %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="bottle_date">Bottle Date</label>
                <input class="form-control" type="text" id="bottle_date" name="winebatch[bottle_date]" value="<%= winebatch.bottle_date %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="avg_sunshine">Average Sunshine</label>
                <input class="form-control" type="text" id="avg_sunshine" name="winebatch[avg_sunshine]" value="<%= winebatch.avg_sunshine %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="avg_temp">Average Temperature</label>
                <input class="form-control" type="text" id="avg_temp" name="winebatch[avg_temp]" value="<%= winebatch.avg_temp %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="tannins">Tannins</label>
                <input class="form-control" type="text" id="tannins" name="winebatch[tannins]" value="<%= winebatch.tannins %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="comments">Comments</label>
                <textarea class="form-control" type="text" id="comments" name="winebatch[comments]" required><%= winebatch.comments %></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Edit Wine Batch</button>
            </div>
        </form>
        <a href="/winebatches/<%= winebatch.wID %>">Back to Selected Batch</a>
    </div>
</div>